<div class="log"> <h4>Don't forget:</h4>
<% if (notes && notes.length > 0) { %>
  <ul>
    <% notes.forEach((note, i) => { %>
      <li class="note-item">
        <form action="/delete" method="POST" class="note-form" data-note-index="<%= i %>">
          <input type="hidden" name="index" value="<%= i %>">
          <button type="submit" class="note-button">
            <%= note %>
          </button>
        </form>
      </li>
    <% }) %>
  </ul>
  <% } else { %>
    <p class="nonote"> No notes yet. </p>
  <% } %> 
  <form action="/clear" method="POST" class="clear">
